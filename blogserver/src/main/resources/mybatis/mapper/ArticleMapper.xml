<?xml version="1.0" encoding="utf-8" ?>

<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper  namespace="com.xpzheng.blog.mapper.ArticleMapper">

  <resultMap id="statMap" type="Stat">
    <result column="gmt_create" property="group" javaType="Date"></result>
    <result column="count" property="count"></result>
  </resultMap>


  <select id="statDay" resultMap="statMap" >
    SELECT DATE(DATE_FORMAT(gmt_create, '%Y-%m-%d')) as gmt_create, COUNT(*) as count
    FROM t_article
    <where>
      <if test="params.beginTime != null">
        and gmt_create >= #{params.beginTime}
      </if>
      <if test="params.endTime != null">
        and gmt_create &lt;= #{params.endTime}
      </if>
    </where>
    GROUP BY DATE(DATE_FORMAT(gmt_create, '%Y-%m-%d'))
  </select>
  
</mapper>