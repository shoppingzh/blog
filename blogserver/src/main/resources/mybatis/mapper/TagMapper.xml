<?xml version="1.0" encoding="utf-8" ?>

<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.xpzheng.blog.mapper.TagMapper">

    <resultMap id="tagMapper" type="Tag">
        <id column="id" property="id"></id>
        <result column="name" property="name"></result>
        <result column="theme" property="theme"></result>
        <result column="deleted" property="deleted"></result>
        <result column="gmt_create" property="gmtCreate"></result>
        <result column="gmt_modify" property="gmtModify"></result>
    </resultMap>

    <sql id="cols">
        id, name, theme, deleted, gmt_create, gmt_modify
    </sql>

    <sql id="noIdCols">
        name, theme, deleted, gmt_create, gmt_modify
    </sql>

</mapper>