<?xml version="1.0" encoding="utf-8" ?>

<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.xpzheng.blog.mapper.UserMapper">

    <resultMap id="userMap" type="User">
        <id property="id" column="id"></id>
        <result property="username" column="username"></result>
        <result property="password" column="password"></result>
        <result property="nickname" column="nickname"></result>
        <result property="age" column="age"></result>
        <result property="deleted" column="deleted"></result>
        <result property="gmtCreate" column="gmt_create"></result>
        <result property="gmtModify" column="gmt_modify"></result>
    </resultMap>

    <sql id="allCols">
        id, username, password, nickname, age, deleted, gmt_create, gmt_modify
    </sql>

</mapper>